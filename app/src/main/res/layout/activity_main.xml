<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="15dp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:src="@drawable/animation_list"
            android:scaleType="fitXY">

        </ImageView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Alarm Button"
            android:textStyle="bold"
            android:layout_marginTop="320dp"
            android:layout_marginHorizontal="10dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By Pressing buttons,alarm can be created and cancelled.\n\nCheck Current time by looking below real digital clocl"
            android:layout_marginTop="350dp"
            android:layout_marginHorizontal="10dp">
        </TextView>
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="420dp"
            android:layout_marginLeft="320dp"
            android:src="@drawable/heart_animation">
        </ImageView>


<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="440dp"
    android:layout_marginHorizontal="10dp"
    android:text="Create Alarm"
    android:textStyle="bold"
    android:backgroundTint="#5aa9e6">
</Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel Alarm"
            android:textStyle="bold"
            android:layout_marginTop="440dp"
            android:layout_marginLeft="180dp"
            android:background="@android:color/transparent"
            android:textColor="#5aa9e6">

        </Button>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>